<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/ba"
    android:layout_height="match_parent">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <Spinner
            android:id="@+id/select"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/common_google_signin_btn_text_dark_default"
            android:entries="@array/level"
            android:padding="10dp"
            android:popupBackground="@color/common_google_signin_btn_text_dark_default"
            android:textAlignment="center" />


        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/player_name"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:text="Name"
            android:textColor="#35c757"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/player_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/line1"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:background="@android:color/transparent"
            android:gravity="center_horizontal"
            android:hint="Enter your name"
            android:textColor="#fafafa"
            android:textColorHint="#fafafa"
            android:textSize="20sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/diff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/select"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:text="Difficulty Level"
            android:textColor="#3cd161"
            android:textSize="25sp" />

        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_above="@+id/diff"
            android:layout_marginBottom="20dp"
            android:background="#fafafa" />

        <View
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/select"
            android:layout_marginTop="20dp"
            android:background="#fafafa" />


        <Button
            android:id="@+id/start_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/line2"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60dp"
            android:background="@drawable/round_text_box3"
            android:onClick="onButtonClicked"
            android:text="Start"
            android:textColor="#050705" />


    </RelativeLayout>

</LinearLayout>